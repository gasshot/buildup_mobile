<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Title -->
    <TextView
        android:id="@+id/textViewUserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="48dp"
        android:text="SKINTHERA"
        android:textColor="@color/primary"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- 왼쪽 연 스피너 -->
    <Spinner
        android:id="@+id/spinnerYearLeft"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textViewUserName"
        app:layout_constraintWidth_percent="0.16" />

    <!-- 왼쪽 월 스피너 -->

    <!-- 왼쪽 일 스피너 -->
    <Spinner
        android:id="@+id/spinnerMonthLeft"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="@+id/spinnerYearLeft"
        app:layout_constraintTop_toBottomOf="@+id/spinnerYearLeft"
        app:layout_constraintWidth_percent="0.16" />

    <!-- 오른쪽 연 스피너 -->
    <Spinner
        android:id="@+id/spinnerDayLeft"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/spinnerMonthLeft"
        app:layout_constraintStart_toEndOf="@+id/textLeftMonth"
        app:layout_constraintTop_toTopOf="@+id/spinnerMonthLeft"
        app:layout_constraintWidth_percent="0.16" />

    <!-- 오른쪽 월 스피너 -->

    <!-- 오른쪽 일 스피너 -->

    <!-- 왼쪽 리스트뷰 -->

    <!-- 오른쪽 리스트뷰 -->

    <!-- 텍스트뷰 (위치 조정 필요하면 수정) -->

    <Spinner
        android:id="@+id/spinnerYearRight"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginEnd="24dp"
        app:layout_constraintBottom_toBottomOf="@+id/spinnerMonthRight"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/spinnerMonthRight"
        app:layout_constraintWidth_percent="0.16" />

    <Spinner
        android:id="@+id/spinnerMonthRight"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="@+id/spinnerDayRight"
        app:layout_constraintStart_toStartOf="@+id/spinnerDayRight"
        app:layout_constraintTop_toBottomOf="@+id/spinnerDayRight"
        app:layout_constraintWidth_percent="0.16" />

    <Spinner
        android:id="@+id/spinnerDayRight"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginStart="160dp"
        app:layout_constraintBottom_toBottomOf="@+id/spinnerYearLeft"
        app:layout_constraintStart_toEndOf="@+id/spinnerYearLeft"
        app:layout_constraintTop_toTopOf="@+id/spinnerYearLeft"
        app:layout_constraintVertical_bias="0.0"
        app:layout_constraintWidth_percent="0.16" />

    <ListView
        android:id="@+id/listViewRight"
        android:layout_width="0dp"
        android:layout_height="260dp"
        app:layout_constraintBottom_toBottomOf="@+id/listViewLeft"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/listViewLeft"
        app:layout_constraintTop_toTopOf="@+id/listViewLeft"
        app:layout_constraintWidth_percent="0.48" />

    <ListView
        android:id="@+id/listViewLeft"
        android:layout_width="0dp"
        android:layout_height="260dp"
        android:layout_marginTop="80dp"
        app:layout_constraintEnd_toStartOf="@id/listViewRight"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/spinnerYearLeft"
        app:layout_constraintWidth_percent="0.48" />

    <!-- 돌아가기 버튼 -->

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="288dp"
        android:text="TextView"
        app:layout_constraintBottom_toTopOf="@id/buttonReturnToMain2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/buttonReturnToMain2"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="8dp"
        android:text="돌아가기"
        app:layout_constraintBottom_toTopOf="@id/compareButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- 차트 보기 버튼 -->
    <Button
        android:id="@+id/compareButton"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="48dp"
        android:text="차트 보기"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/textLeftYear"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:gravity="center"
        android:text="년"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/spinnerYearLeft"
        app:layout_constraintStart_toEndOf="@+id/spinnerYearLeft"
        app:layout_constraintTop_toTopOf="@+id/spinnerYearLeft"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/textLeftMonth"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:gravity="center"
        android:text="월"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/spinnerMonthLeft"
        app:layout_constraintStart_toEndOf="@+id/spinnerMonthLeft"
        app:layout_constraintTop_toTopOf="@+id/spinnerMonthLeft" />

    <TextView
        android:id="@+id/textLeftDay"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:gravity="center"
        android:text="일"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/spinnerDayLeft"
        app:layout_constraintStart_toEndOf="@+id/spinnerDayLeft"
        app:layout_constraintTop_toTopOf="@+id/spinnerDayLeft" />

</androidx.constraintlayout.widget.ConstraintLayout>
